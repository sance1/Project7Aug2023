
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .main {
       width:100%;
       margin-left:20%;
    }
</style>

<div class="modal" tabindex="-1" id="formDelete" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Form Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label>Are you sure want to delete this data ?</label>
                    <input id="idDelete" hidden>
                </div>
            </div>
            <div class="modal-footer mt-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="deleteEmployee()">Delete data</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="formEmployee" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Form Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-2">
                    <label>Name</label>
                    <input type="text" id="id" class="form-control" hidden>
                    <input type="text" id="name" class="form-control">
                    <small class="text-danger mb-4"><i id="errName"></i></small>
                </div>
                <div class="form-group mb-2">
                    <label>Department</label>
                    <input type="text" id="department" class="form-control">
                    <small class="text-danger mb-4"><i id="errDepartment"></i></small>
                </div>
            </div>
            <div class="modal-footer mt-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="save()" >Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="main">

    <button class="btn btn-primary mb-4 mt-2" type="button" onclick="showModal()">
        <i class="fa fa-plush"></i>
        <i class="fa fa-plus"></i> <i class="fa-solid fa-user"></i> Tambah
    </button>
    <br>
    <small class="text-danger mb-4" style="margin-bottom:10px"><i>*Please connect the database first</i></small>
    <div id="table" style="width:50%;">
        <table class="table table-hover table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <td>No</td>
                    <td>Nama</td>
                    <td>Department</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody id="getTable">
            </tbody>
        </table>
    </div>

</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script src="/js/home.js"></script>
